generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model SajuRecord {
  id           Int      @id @default(autoincrement())
  publicID     String   @unique @default(uuid()) @map("public_id")
  data         Json     @db.JsonB
  type         SajuType @map("type")
  version      Float    @default(1.0)
  createdAt    DateTime @default(now()) @map("created_at")
  userPublicID String   @map("user_public_id")

  @@index([userPublicID])
  @@map("saju_records")
}

enum SajuType {
  DAILY_NORMAL
  NEW_YEAR
}
